{
  "manifest_version": 2,

  "name": "我的扩展",
  "description": "This extension allows the user to change the background color of the current page.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html",
	"default_title": "Click here!"
  },
  
  "content_scripts": [{
        // "matches": ["*://*/*"],
        "matches": ["<all_urls>"],
        "js": [
          "vendor/jquery-3.3.1.min.js",
          "libs/x-tag-core-with-shadowdom.js",
        	"caiyun-operate-container.js",
          "customtools.js",
          "highlight.js",
          // "js/inspector.js",
          "cssselector.js",
          "index.js"
        ],
        "css":[
          "css/style.css"
        ]
    }],
  "permissions": [
		"tabs",
        "activeTab",
        "notifications",
        "storage"
  ]
}